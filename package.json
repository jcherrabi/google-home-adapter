{
  "name": "google-home-adapter",
  "display_name": "Google Home",
  "version": "0.1.0",
  "description": "Uses your Google Home device to speak to you",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tim-hellhake/google-home-adapter.git"
  },
  "author": "Tim Hellhake",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/tim-hellhake/google-home-adapter/issues"
  },
  "homepage": "https://github.com/tim-hellhake/google-home-adapter#readme",
  "files": [
    "LICENSE",
    "SHA256SUMS",
    "index.js",
    "google-home-adapter.js"
  ],
  "moziot": {
    "api": {
      "min": 2,
      "max": 2
    },
    "plugin": true,
    "exec": "{nodeLoader} {path}",
    "schema": {
      "type": "object",
      "properties": {
        "messages": {
          "type": "array",
          "title": "Predefined messages",
          "items": {
            "type": "object",
            "title": "A predefined message",
            "required": [
              "name",
              "message"
            ],
            "properties": {
              "name": {
                "type": "string",
                "title": "The name of the action"
              },
              "message": {
                "type": "string",
                "title": "The text of the message"
              }
            }
          }
        }
      }
    }
  },
  "dependencies": {
    "google-home-notify-client": "^0.3.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.2",
    "eslint": "^6.0.0"
  }
}
